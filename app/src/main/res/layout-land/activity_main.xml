<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/txtview_question_text"
            android:layout_width="wrap_content"
            android:layout_height="60sp"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="80sp"
            android:layout_marginBottom="10sp"
            android:text="TextView"
            android:textSize="22sp"
            tools:text="hello fahimeh" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="60sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_false"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_gravity="left"
                    android:adjustViewBounds="true"
                    android:scaleType="center"
                    android:text="@string/button_previous"
                    android:tint="#000000" />

                <TextView
                    android:id="@+id/txt_false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-70dp"
                    android:clickable="false"
                    android:text="@string/button_false"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_true"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_gravity="left"
                    android:adjustViewBounds="true"
                    android:paddingLeft="0dp"
                    android:scaleType="center"
                    android:text="@string/button_true"
                    android:tint="#000000" />

                <TextView
                    android:id="@+id/txt_true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-65dp"
                    android:clickable="false"
                    android:text="@string/button_true"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|left"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_first"
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:layout_gravity="left"
                        android:adjustViewBounds="true"
                        android:paddingLeft="0dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_arrow_right"
                        android:text="@string/button_next"
                        android:tint="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="-60dp"
                        android:clickable="false"
                        android:text="@string/button_first"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_prev"
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:layout_gravity="left"
                        android:adjustViewBounds="true"
                        android:paddingLeft="0dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_arrow_left"
                        android:text="@string/button_previous"
                        android:tint="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="-60dp"
                        android:clickable="false"
                        android:text="@string/button_previous"
                        android:textColor="#000"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_next"
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:layout_gravity="left"
                        android:adjustViewBounds="true"
                        android:paddingLeft="0dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_arrow_right"
                        android:text="@string/button_next"
                        android:tint="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="-60dp"
                        android:clickable="false"
                        android:text="@string/button_next"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_last"
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:layout_gravity="left"
                        android:adjustViewBounds="true"
                        android:paddingLeft="0dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_arrow_right"
                        android:text="@string/button_next"
                        android:tint="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="-60dp"
                        android:clickable="false"
                        android:text="@string/button_last"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:context=".controller.QuizActivity">

        <TextView
            android:id="@+id/textScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/toast_score"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textDigit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_refresh"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:text="@string/button_refresh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="-120dp"
                android:text="@string/button_refresh"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>